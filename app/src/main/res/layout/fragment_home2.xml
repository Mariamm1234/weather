<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <!--    android:visibility="gone"-->
    <ScrollView android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        android:id="@+id/scroll"

        xmlns:tools="http://schemas.android.com/tools"
        >
        <androidx.constraintlayout.widget.ConstraintLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/colored_background"
            tools:context=".presentations.home.ui.home.HomeFragment">


            <TextView
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cairo"
                android:textSize="20dp"
                android:textColor="@color/white"
                app:layout_editor_absoluteY="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />
            <TextView
                android:textColor="@color/white"
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tue,November 26 5:41 PM"
                android:textSize="18dp"
                app:layout_constraintTop_toBottomOf="@id/country"
                app:layout_editor_absoluteY="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints" />

            <LinearLayout
                android:id="@+id/main"
                app:layout_constraintTop_toBottomOf="@id/date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteY="43dp">

                <ImageView
                    android:id="@+id/icon"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/baseline_person_24" />

                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/degree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="25"
                    android:textSize="100dp"

                    />

                <TextView
                    android:id="@+id/cel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Â°C"
                    android:textSize="18dp"

                    />


            </LinearLayout>

            <RelativeLayout
                android:id="@+id/relative"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.498"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/main"
                tools:ignore="MissingConstraints">
                <TextView
                    android:id="@+id/realfeel"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_centerHorizontal="true"
                    android:text="29 / 10  |  RealFeel 14"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/type"
                    android:layout_below="@id/realfeel"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="5dp"
                    android:text="Cloudy"
                    android:gravity="center"
                    android:textSize="20dp" />


            </RelativeLayout>
            <View
                android:id="@+id/line"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@id/relative"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                android:background="#c0c0c0"
                tools:ignore="MissingConstraints" />
            <TextView
                android:id="@+id/dailyForecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Forecast"
                android:textSize="20dp"
                android:textColor="@color/white"
                app:layout_editor_absoluteY="10dp"
                android:layout_marginTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/line"
                tools:ignore="MissingConstraints" />
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/forecast"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/dailyForecast"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                tools:ignore="MissingConstraints"/>
            <View
                android:id="@+id/line2"
                android:layout_marginTop="18dp"
                app:layout_constraintTop_toBottomOf="@id/forecast"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginHorizontal="10dp"
                android:background="#c0c0c0"
                tools:ignore="MissingConstraints" />
            <!--design recycler click-->
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/line2"
                app:layout_constraintBottom_toBottomOf="parent">
                <!--<LinearLayout-->
                <!--    android:layout_width="wrap_content"-->
                <!--         android:layout_height="wrap_content">-->

                <!--</LinearLayout>-->
            </androidx.cardview.widget.CardView>
            <!--    <TextView-->
            <!--        android:id="@+id/text_home"-->
            <!--        android:layout_width="match_parent"-->
            <!--        android:layout_height="wrap_content"-->
            <!--        android:layout_marginStart="8dp"-->
            <!--        android:layout_marginTop="8dp"-->
            <!--        android:layout_marginEnd="8dp"-->
            <!--        android:textAlignment="center"-->
            <!--        android:textSize="20sp"-->
            <!--        app:layout_constraintEnd_toEndOf="parent"-->
            <!--        app:layout_constraintStart_toStartOf="parent"-->
            <!--        app:layout_constraintTop_toTopOf="parent"-->
            <!--        app:layout_constraintBottom_toBottomOf="parent" />-->




        </androidx.constraintlayout.widget.ConstraintLayout>




    </ScrollView>
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/tabs"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="parent"
        >

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            tools:ignore="MissingConstraints" />

    </LinearLayout>

</RelativeLayout>


